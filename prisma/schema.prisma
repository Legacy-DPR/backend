generator client {
  provider = "prisma-client-js"
}

datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model User {
  id         String   @id @default(cuid())
  telegramId String   @unique
  createdAt  DateTime @default(now())
  tickets    Ticket[]
}

model Employee {
  id                     String            @id @default(cuid())
  name                   String
  createdAt              DateTime          @default(now())
  telegramId             String            @unique
  department             Department        @relation(fields: [departmentId], references: [id])
  departmentId           String
  ticketOperations       TicketOperation[]
  allowedOperationGroups OperationGroup[]
  onDuty                 Boolean           @default(false)
  admin                  Boolean           @default(false)
}

model Department {
  id                       String           @id @default(cuid())
  address                  String
  createdAt                DateTime         @default(now())
  tickets                  Ticket[]
  availableOperationGroups OperationGroup[] @relation("DepartmentOperationGroups")
  employees                Employee[]
}

enum OperationStatus {
  CALL
  COMPLETE
  CANCEL
}

model Ticket {
  id              String           @id @default(cuid())
  appointedTime   DateTime?
  department      Department       @relation(fields: [departmentId], references: [id])
  departmentId    String
  user            User?            @relation(fields: [userId], references: [id])
  userId          String?
  qrCode          String?	   @unique 
  ticketOperation TicketOperation? @relation("TicketOperationForTicket")
  createdAt       DateTime         @default(now())
  operation       Operation        @relation(fields: [operationId], references: [id])
  operationId     String
}

model TicketOperation {
  id              String          @id @default(cuid())
  ticket          Ticket          @relation("TicketOperationForTicket", fields: [ticketId], references: [id])
  ticketId        String          @unique
  employee        Employee        @relation(fields: [employeeId], references: [id])
  employeeId      String
  operationStatus OperationStatus
  notes           String

  @@unique([ticketId, employeeId])
}

model Operation {
  id               String          @id
  name             String
  description      String
  tickets          Ticket[]
  operationGroup   OperationGroup? @relation(name: "OperationGroupOperations", fields: [operationGroupId], references: [id])
  operationGroupId String?
}

model OperationGroup {
  id           String       @id
  name         String
  description  String
  operations   Operation[]  @relation(name: "OperationGroupOperations")
  operationIds String[]
  employees    Employee[]
  departments  Department[] @relation("DepartmentOperationGroups")
}

model ServiceClient {
  secretToken String @id @default(cuid())
  name        String
}
